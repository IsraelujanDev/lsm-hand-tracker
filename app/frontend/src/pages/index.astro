---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import ImageCarousel from '../components/ImageCarousel.astro';

const images = [
	'/images/photo1.jpg',
	'/images/photo2.jpg',
	'/images/photo3.jpg',
];
---

<Layout>

	<Hero/>

	<ImageCarousel images={images} />

</Layout>

<style>
	.introduction {
		background-color: var(--color-bg-normal);
		border-radius: 10px;
		padding: 5px 20px;
		margin-bottom: 20px;
	}
</style>