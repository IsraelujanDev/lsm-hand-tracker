---
interface Props {
    buttonID: string;
    label: string;
}
const { buttonID, label } = Astro.props
---

<button id={buttonID} class="button-control-panel">
    <slot/>
    <span class="label">{ label }</span>
</button>

<style>
    .button-control-panel {
        display: flex;
        align-items: center;
        justify-content: center;

        width: 120px;
        height: 30px;
        
		border-radius: 8px;
        border: none;
        
        color: white;
        font-size: 12px;   

        background: var(--color-bg-lighter);
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
        
        transition: background 0.2s ease;
    }

    .button-control-panel:hover {
        background: var(--color-accent);
    }

    .button-control-panel:active {
        background: var(--color-active);
    }

    .label {
        margin-left: 6px;
    }

</style>
