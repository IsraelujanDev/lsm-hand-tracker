---
// src/components/GestureBox.astro
const letters = [..."ABCDEFGHIJKLMNÃ‘OPQRSTUVWXYZ"];
---
<fieldset class="gesture-box">
    <legend class="sr-only">Select a letter</legend>
    <div class="letters-grid">
        {letters.map((letter) => (
            <label class="gesture-button">
            <input
                type="radio"
                name="letter"
                value={letter}
                required
                class="sr-only"
            />
            <span aria-hidden="true">{letter}</span>
            </label>
        ))}
    </div>
</fieldset>

<style>
    .gesture-box {
        padding: 1rem;
    }

    .letters-grid {
        display: grid;
        grid-template-columns: repeat(7, 1fr);
        gap: 0.5rem;
    }

    .gesture-button {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 2.5rem;
        height: 2.5rem;
        border-radius: 0.375rem;
        background: var(--color-bg);
        border: 2px solid var(--color-bg-lighter);
        cursor: pointer;
        user-select: none;
        font-weight: 600;
        transition: background 0.2s, border-color 0.2s;
    }

    .sr-only {
        position: absolute !important;
        width: 1px; height: 1px;
        padding: 0; margin: -1px;
        overflow: hidden; clip: rect(0,0,0,0);
        white-space: nowrap; border: 0;
    }

    .gesture-button:has(input:checked),
    .gesture-button:has(input:focus) {
        border-color: var(--color-accent);
        background: var(--color-accent-light);
    }

    .gesture-button span {
        display: block;
        line-height: 1;
    }

    @media (max-width: 960px) {
        .letters-grid  {
            display: flex;
            flex-wrap: wrap;
        }
    }
</style>
